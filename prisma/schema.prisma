// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Post {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([name])
}

// Gaming Cafe Management Models

enum DeviceType {
    PS5
    PS4
    VR
    VR_RACING
    POOL
    FRAME
    RACING
}

enum SessionStatus {
    ACTIVE
    ENDED
}

enum PaymentStatus {
    PENDING
    PAID
    DUE
}

enum OrderStatus {
    ACTIVE
    COMPLETED
    CANCELLED
}

model Device {
    id          Int        @id @default(autoincrement())
    type        DeviceType
    counterNo   Int
    maxPlayers  Int
    hourlyRate  Decimal
    sessions    Session[]

    @@unique([type, counterNo])
}

model Token {
    id          Int         @id @default(autoincrement())
    tokenNo     Int
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
    orders      Order[]     // A token can have multiple orders (visits)
    sessions    Session[]   // Keep for backward compatibility
    bills       Bill[]      // Keep for backward compatibility
}

model Order {
    id          String       @id @default(uuid())
    orderNumber String       @unique // Human-readable order number
    token       Token        @relation(fields: [tokenId], references: [id])
    tokenId     Int
    status      OrderStatus  @default(ACTIVE)
    startTime   DateTime     @default(now())
    endTime     DateTime?
    sessions    Session[]
    bills       Bill[]
    notes       String?
    createdAt   DateTime     @default(now())
    updatedAt   DateTime     @updatedAt
}

model Session {
    id          Int           @id @default(autoincrement())
    token       Token         @relation(fields: [tokenId], references: [id])
    tokenId     Int
    order       Order?        @relation(fields: [orderId], references: [id])
    orderId     String?       // Optional to support existing sessions
    device      Device        @relation(fields: [deviceId], references: [id])
    deviceId    Int
    playerCount Int
    startTime   DateTime      @default(now())
    endTime     DateTime?
    duration    Int?          // Duration in minutes
    cost        Decimal?      @default(0)
    comments    String?       @default("")
    framesPlayed Int?         // Number of frames played (for FRAME game type)
    status      SessionStatus @default(ACTIVE)
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @updatedAt
}

model Bill {
    id          Int           @id @default(autoincrement())
    // Keep token relation for backward compatibility
    token       Token         @relation(fields: [tokenId], references: [id])
    tokenId     Int
    // New order relation
    order       Order?        @relation(fields: [orderId], references: [id])
    orderId     String?       // Optional for backward compatibility
    amount      Decimal
    generatedAt DateTime      @default(now())
    status      PaymentStatus @default(PENDING)
    correctedAmount Decimal?  // Store any manually adjusted amount
    paymentMethod String?     // Method of payment (cash, card, etc.)
    paymentReference String?  // Reference number for electronic payments
    paidAt      DateTime?     // When the bill was paid
}
